{
  "name": "weatherapp",
  "version": "1.0.0",
  "homepage": "https://jamiejohnstone.github.io/WeatherApp",
  "main": "index.ts",
  "scripts": {
    "start": "expo start",
    "android": "expo start --android",
    "ios": "expo start --ios",
    "web": "expo start --web",
    "build:web": "expo export --platform web && node scripts/fix-github-pages-paths.js",
    "build:development": "eas build --profile development",
    "build:preview": "eas build --profile preview",
    "build:production": "eas build --profile production",
    "build:verify": "node scripts/verify-build.js",
    "deploy:web": "npm run build:web && npm run build:verify && gh-pages -d dist",
    "predeploy": "npm run test && npm run build:web",
    "build:all": "./scripts/build.sh all production",
    "build:ios": "./scripts/build.sh ios production",
    "build:android": "./scripts/build.sh android production",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:components": "jest tests/components",
    "test:hooks": "jest tests/hooks",
    "test:services": "jest tests/services",
    "test:screens": "jest tests/screens",
    "test:integration": "jest tests/integration",
    "test:unit": "jest tests/components tests/hooks tests/utils tests/services",
    "test:e2e": "jest tests/integration tests/screens tests/navigation"
  },
  "dependencies": {
    "@expo/metro-runtime": "~5.0.4",
    "@react-native-async-storage/async-storage": "2.1.2",
    "@react-native-community/netinfo": "^11.4.1",
    "@react-navigation/native": "^7.1.14",
    "@react-navigation/stack": "^7.4.2",
    "expo": "~53.0.16",
    "expo-constants": "~17.1.6",
    "expo-location": "~18.1.6",
    "expo-status-bar": "~2.2.3",
    "react": "19.0.0",
    "react-dom": "19.0.0",
    "react-native": "0.79.5",
    "react-native-safe-area-context": "5.4.0",
    "react-native-screens": "~4.11.1",
    "react-native-web": "^0.20.0",
    "expo-dev-client": "~5.2.4"
  },
  "devDependencies": {
    "@babel/core": "^7.25.2",
    "@testing-library/jest-native": "^5.4.3",
    "@testing-library/react-native": "^13.2.0",
    "@types/jest": "^30.0.0",
    "@types/react": "~19.0.10",
    "@types/react-test-renderer": "^19.1.0",
    "@typescript-eslint/eslint-plugin": "^8.35.1",
    "@typescript-eslint/parser": "^8.35.1",
    "babel-plugin-module-resolver": "^5.0.2",
    "eslint": "^9.30.1",
    "gh-pages": "^6.3.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^30.0.4",
    "jest-environment-jsdom": "^30.0.4",
    "prettier": "^3.6.2",
    "react-test-renderer": "^19.0.0",
    "ts-jest": "^29.4.0",
    "typescript": "~5.8.3"
  },
  "private": true
}
